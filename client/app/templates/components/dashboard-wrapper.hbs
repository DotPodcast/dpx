{{# bs-navbar class='navbar-top' position='static-top' as |navbar| }}
  <div class="navbar-header">
    {{ navbar.toggle }}
    {{#Â link-to 'index' class='navbar-brand' }}DPX{{/ link-to }}
  </div>
  {{# navbar.content }}
    {{# navbar.nav class='navbar-right navbar-top-links' as |nav| }}
      {{# bs-dropdown tagName='li' as |dd| }}
        {{# dd.toggle }}
          <i class="fa fa-envelope fa-fw"></i>
          <i class="fa fa-caret-down"></i>
        {{/ dd.toggle }}

        {{# dd.menu class='dropdown-messages' as |ddm| }}
          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <div>
                <strong>John Smith</strong>
                <span class="pull-right text-muted">
                  <em>Yesterday</em>
                </span>
              </div>
              <div>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque eleifend...</div>
            {{/ ddm.link-to }}
          {{/ ddm.item }}

          {{ ddm.divider }}

          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <strong>Read All Messages</strong>
              <i class="fa fa-angle-right"></i>
            {{/ ddm.link-to }}
          {{/ ddm.item }}
        {{/ dd.menu }}
      {{/ bs-dropdown }}

      {{# bs-dropdown tagName='li' as |dd| }}
        {{# dd.toggle }}
          <i class="fa fa-tasks fa-fw"></i>
          <i class="fa fa-caret-down"></i>
        {{/ dd.toggle }}

        {{# dd.menu class='dropdown-tasks' as |ddm| }}
          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <div>
                <p>
                  <strong>Task 1</strong>
                  <span class="pull-right text-muted">40% Complete</span>
                </p>
                <div class="progress progress-striped active">
                  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                    <span class="sr-only">40% Complete (success)</span>
                  </div>
                </div>
              </div>
            {{/ ddm.link-to }}
          {{/ ddm.item }}

          {{ ddm.divider }}

          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <div>
                <p>
                  <strong>Task 2</strong>
                  <span class="pull-right text-muted">20% Complete</span>
                </p>
                <div class="progress progress-striped active">
                  <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                    <span class="sr-only">20% Complete</span>
                  </div>
                </div>
              </div>
            {{/ ddm.link-to }}
          {{/ ddm.item }}

          {{ ddm.divider }}

          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <div>
                <p>
                  <strong>Task 3</strong>
                  <span class="pull-right text-muted">60% Complete</span>
                </p>
                <div class="progress progress-striped active">
                  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
                    <span class="sr-only">60% Complete (warning)</span>
                  </div>
                </div>
              </div>
            {{/ ddm.link-to }}
          {{/ ddm.item }}

          {{ ddm.divider }}

          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <div>
                <p>
                  <strong>Task 4</strong>
                  <span class="pull-right text-muted">80% Complete</span>
                </p>
                <div class="progress progress-striped active">
                  <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
                    <span class="sr-only">80% Complete (danger)</span>
                  </div>
                </div>
              </div>
            {{/ ddm.link-to }}
          {{/ ddm.item }}

          {{ ddm.divider }}

          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <strong>See All Tasks</strong>
              <i class="fa fa-angle-right"></i>
            {{/ ddm.link-to }}
          {{/ ddm.item }}
        {{/ dd.menu }}
      {{/ bs-dropdown }}

      {{# bs-dropdown tagName='li' as |dd| }}
        {{# dd.toggle }}
          <i class="fa fa-bell fa-fw"></i>
          <i class="fa fa-caret-down"></i>
        {{/ dd.toggle }}

        {{# dd.menu class='dropdown-alerts' as |ddm| }}
          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <div>
                <i class="fa fa-comment fa-fw"></i> New Comment
                <span class="pull-right text-muted small">4 minutes ago</span>
              </div>
            {{/ ddm.link-to }}
          {{/ ddm.item }}

          {{ ddm.divider }}

          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <div>
                <i class="fa fa-twitter fa-fw"></i> 3 New Followers
                <span class="pull-right text-muted small">12 minutes ago</span>
              </div>
            {{/ ddm.link-to }}
          {{/ ddm.item }}

          {{ ddm.divider }}

          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <div>
                <i class="fa fa-envelope fa-fw"></i> Message Sent
                <span class="pull-right text-muted small">4 minutes ago</span>
              </div>
            {{/ ddm.link-to }}
          {{/ ddm.item }}

          {{ ddm.divider }}

          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <div>
                <i class="fa fa-tasks fa-fw"></i> New Task
                <span class="pull-right text-muted small">4 minutes ago</span>
              </div>
            {{/ ddm.link-to }}
          {{/ ddm.item }}

          {{ ddm.divider }}

          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <div>
                <i class="fa fa-upload fa-fw"></i> Server Rebooted
                <span class="pull-right text-muted small">4 minutes ago</span>
              </div>
            {{/ ddm.link-to }}
          {{/ ddm.item }}

          {{ ddm.divider }}

          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <strong>See All Alerts</strong>
              <i class="fa fa-angle-right"></i>
            {{/ ddm.link-to }}
          {{/ ddm.item }}
        {{/ dd.menu }}
      {{/ bs-dropdown }}

      {{# bs-dropdown tagName='li' as |dd| }}
        {{# dd.toggle }}
          <i class="fa fa-user fa-fw"></i>
          <i class="fa fa-caret-down"></i>
        {{/ dd.toggle }}

        {{# dd.menu class='dropdown-user' as |ddm| }}
          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <i class="fa fa-user fa-fw"></i>
              User Profile
            {{/ ddm.link-to }}
          {{/ ddm.item }}

          {{# ddm.item }}
            {{# ddm.link-to 'dashboard' }}
              <i class="fa fa-gear fa-fw"></i>
              Settings
            {{/ ddm.link-to }}
          {{/ ddm.item }}

          {{# ddm.item }}
            <a {{ action 'logout' }}>
              <i class="fa fa-sign-out fa-fw"></i>
              Logout
            </a>
          {{/ ddm.item }}
        {{/ dd.menu }}
      {{/ bs-dropdown }}
    {{/ navbar.nav }}
  {{/ navbar.content }}

  <div class="navbar-default sidebar" role="navigation">
    <div class="sidebar-nav navbar-collapse">
      <ul class="nav" class="side-menu">
        <li class="sidebar-search">
          <div class="input-group custom-search-form">
            <input type="text" class="form-control" placeholder="Search...">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button">
                <i class="fa fa-search"></i>
              </button>
            </span>
          </div>
        </li>
        <li>
          {{# link-to 'dashboard' }}
            <i class="fa fa-dashboard fa-fw"></i>
            Dashboard
          {{/ link-to }}
        </li>
        <li>
          {{# link-to 'dashboard' }}
            <i class="fa fa-bar-chart-o fa-fw"></i>
            Charts
            <span class="fa arrow"></span>
          {{/ link-to }}
          <ul class="nav nav-second-level">
            <li>
              {{# link-to 'dashboard' }}
                Flot Charts
              {{/ link-to }}
            </li>
            <li>
              {{# link-to 'dashboard' }}
                Morris.js Charts
              {{/ link-to }}
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
{{/ bs-navbar }}

<div class="page-wrapper">
  {{ yield }}
</div>
